{
  "name": "fluorite-mcp",
  "version": "0.2.0",
  "description": "MCP server that serves library specs (YAML/JSON) and a VitePress docs site.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "yaml",
    "json",
    "specs",
    "library",
    "documentation",
    "vitepress",
    "server"
  ],
  "homepage": "https://github.com/kotsutsumi/fluorite-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kotsutsumi/fluorite-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/kotsutsumi/fluorite-mcp/issues"
  },
  "author": "kotsutsumi",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "fluorite-mcp": "dist/server.js"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:check": "npm run build && timeout 3s node dist/server.js 2>/dev/null || echo 'Build verification complete'",
    "start": "node dist/server.js",
    "test": "npm run build && vitest run",
    "test:unit": "vitest run --exclude '**/e2e.test.ts'",
    "test:e2e": "npm run build && vitest run src/test/e2e.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "npm run build && vitest run --coverage",
    "test:watch": "vitest",
    "test:server": "node -e \"console.log('Running basic server validation...'); const server = require('./dist/server.js'); console.log('âœ… Server module loads successfully');\"",
    "lint": "tsc --noEmit --skipLibCheck",
    "validate": "npm run lint && npm run test",
    "prepublishOnly": "npm run validate && npm run build && npm run build:check",
    "postpack": "echo 'Package created successfully'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 5173"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitepress": "^1.3.3",
    "vitest": "^3.2.4"
  }
}
