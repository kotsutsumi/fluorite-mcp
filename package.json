{
  "name": "fluorite-mcp",
  "version": "0.13.5",
  "description": "Enterprise-grade MCP server for Claude Code CLI with 750+ spike templates, 87+ library specs, intelligent memory engine, and continuous learning capabilities.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "ai",
    "code-generation",
    "spike-templates",
    "nextjs",
    "react",
    "typescript",
    "fastapi",
    "laravel",
    "rust",
    "machine-learning",
    "continuous-learning",
    "yaml",
    "json",
    "specs",
    "library",
    "documentation",
    "vitepress",
    "server",
    "developer-tools",
    "productivity",
    "automation"
  ],
  "homepage": "https://github.com/kotsutsumi/fluorite-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kotsutsumi/fluorite-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/kotsutsumi/fluorite-mcp/issues"
  },
  "author": "kotsutsumi",
  "license": "MIT",
  "type": "module",
  "main": "dist/mcp-server.js",
  "types": "dist/mcp-server.d.ts",
  "bin": {
    "fluorite-mcp": "dist/cli/index.js",
    "fluorite": "dist/cli/index.js",
    "fluorite-mcp-server": "dist/mcp-server.js"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/**/*",
    "src/catalog/**/*",
    "src/spikes/**/*",
    "README.md",
    "LICENSE",
    "API.md",
    "METRICS.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:check": "npm run build && timeout 3s node dist/server.js 2>/dev/null || echo 'Build verification complete'",
    "start": "node dist/server.js",
    "test": "npm run build && node --max-old-space-size=4096 ./node_modules/.bin/vitest run --no-coverage",
    "test:unit": "node --max-old-space-size=4096 ./node_modules/.bin/vitest run --no-coverage --exclude '**/e2e.test.ts' --exclude '**/static-analysis.test.ts'",
    "test:e2e": "npm run build && node --max-old-space-size=4096 ./node_modules/.bin/vitest run --no-coverage src/test/e2e.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "npm run build && node --max-old-space-size=4096 ./node_modules/.bin/vitest run --coverage",
    "test:watch": "vitest",
    "test:server": "node -e \"console.log('Running basic server validation...'); const server = require('./dist/server.js'); console.log('âœ… Server module loads successfully');\"",
    "test:ci": "npm run build && node --max-old-space-size=4096 ./node_modules/.bin/vitest run --config vitest.config.ci.ts",
    "lint": "tsc --noEmit --skipLibCheck",
    "validate": "npm run lint && npm run test:ci",
    "prepublishOnly": "npm run validate && npm run build && npm run build:check",
    "postpack": "echo 'Package created successfully'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 5173"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitepress": "^1.3.3",
    "vitest": "^3.2.4"
  }
}
