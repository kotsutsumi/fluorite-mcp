{
  "id": "secretlint-config",
  "name": "Secretlint Config Minimal",
  "version": "1.0.0",
  "stack": ["secretlint"],
  "tags": ["security"],
  "description": "Secretlint minimal config and script.",
  "params": [{ "name": "repo_name", "default": "repo" }],
  "files": [
    { "path": "{{repo_name}}/.secretlintrc.json", "template": "{ \"rules\": [ { \"id\": \"@secretlint/secretlint-rule-preset-recommend\" } ] }\n" },
    { "path": "{{repo_name}}/package.json", "template": "{ \"name\": \"{{repo_name}}\", \"private\": true, \"scripts\": { \"secretlint\": \"npx secretlint \" }, \"devDependencies\": { \"@secretlint/secretlint-rule-preset-recommend\": \"latest\", \"secretlint\": \"latest\" } }\n" }
  ],
  "patches": []
}

