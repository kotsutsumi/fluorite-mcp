{
  "id": "next-shadcn-tabs",
  "name": "Next.js shadcn/ui Tabs",
  "version": "1.0.0",
  "stack": ["nextjs", "shadcn"],
  "tags": ["ui", "tabs"],
  "description": "Simple shadcn-like Tabs component (utility classes).",
  "params": [{ "name": "app_name", "default": "next-app" }],
  "files": [
    { "path": "{{app_name}}/components/ui/tabs.tsx", "template": "import * as React from 'react';\nexport function Tabs(){ const [t,setT]=React.useState('a'); return (<div><div className='flex gap-2'><button onClick={()=>setT('a')} className={'px-2 py-1 '+(t==='a'?'bg-black text-white':'border')}>A</button><button onClick={()=>setT('b')} className={'px-2 py-1 '+(t==='b'?'bg-black text-white':'border')}>B</button></div><div className='mt-2'>{t==='a'?'Tab A':'Tab B'}</div></div>); }\n" },
    { "path": "{{app_name}}/app/page.tsx", "template": "import { Tabs } from '../components/ui/tabs';\nexport default function Page(){ return <main className='p-6'><Tabs/></main>; }\n" }
  ],
  "patches": []
}

