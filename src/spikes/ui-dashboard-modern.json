{
  "id": "ui-dashboard-modern",
  "name": "Modern Dashboard Layout with Sidebar",
  "version": "1.0.0",
  "stack": ["react", "nextjs", "tailwindcss", "shadcn-ui"],
  "tags": ["ui", "dashboard", "layout", "sidebar", "tailwind", "shadcn", "responsive", "dark-mode"],
  "description": "A modern dashboard layout with collapsible sidebar, header, and main content area using TailwindCSS v4.1+ and shadcn/ui v2+",
  "params": [
    {
      "name": "framework",
      "required": false,
      "description": "Target framework (react, nextjs, vue)",
      "default": "react"
    },
    {
      "name": "componentName",
      "required": false,
      "description": "Component name",
      "default": "DashboardLayout"
    },
    {
      "name": "includeSearch",
      "required": false,
      "description": "Include search functionality in header",
      "default": "true"
    }
  ],
  "files": [
    {
      "path": "components/{{componentName}}.tsx",
      "template": "\"use client\"\n\nimport * as React from \"react\"\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/components/ui/button\"\nimport { ScrollArea } from \"@/components/ui/scroll-area\"\nimport { Input } from \"@/components/ui/input\"\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuLabel,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/components/ui/dropdown-menu\"\nimport { Avatar, AvatarFallback, AvatarImage } from \"@/components/ui/avatar\"\nimport {\n  Home,\n  BarChart3,\n  Users,\n  Settings,\n  Menu,\n  X,\n  Search,\n  Bell,\n  Moon,\n  Sun,\n  LogOut,\n  User,\n  HelpCircle,\n} from \"lucide-react\"\nimport { useTheme } from \"next-themes\"\n\nconst sidebarItems = [\n  { icon: Home, label: \"Dashboard\", href: \"/\" },\n  { icon: BarChart3, label: \"Analytics\", href: \"/analytics\" },\n  { icon: Users, label: \"Users\", href: \"/users\" },\n  { icon: Settings, label: \"Settings\", href: \"/settings\" },\n]\n\ninterface {{componentName}}Props {\n  children: React.ReactNode\n}\n\nexport function {{componentName}}({ children }: {{componentName}}Props) {\n  const [sidebarOpen, setSidebarOpen] = React.useState(true)\n  const { theme, setTheme } = useTheme()\n\n  return (\n    <div className=\"flex h-screen bg-background\">\n      {/* Sidebar */}\n      <aside\n        className={cn(\n          \"bg-card border-r transition-all duration-300\",\n          sidebarOpen ? \"w-64\" : \"w-16\"\n        )}\n      >\n        <div className=\"flex h-14 items-center justify-between px-4 border-b\">\n          {sidebarOpen && (\n            <h2 className=\"text-lg font-semibold\">Your App</h2>\n          )}\n          <Button\n            variant=\"ghost\"\n            size=\"icon\"\n            onClick={() => setSidebarOpen(!sidebarOpen)}\n          >\n            {sidebarOpen ? <X className=\"h-4 w-4\" /> : <Menu className=\"h-4 w-4\" />}\n          </Button>\n        </div>\n        <ScrollArea className=\"flex-1\">\n          <nav className=\"p-2\">\n            {sidebarItems.map((item, index) => (\n              <Button\n                key={index}\n                variant=\"ghost\"\n                className={cn(\n                  \"w-full justify-start mb-1\",\n                  !sidebarOpen && \"justify-center px-2\"\n                )}\n                asChild\n              >\n                <a href={item.href}>\n                  <item.icon className={cn(\"h-4 w-4\", sidebarOpen && \"mr-2\")} />\n                  {sidebarOpen && <span>{item.label}</span>}\n                </a>\n              </Button>\n            ))}\n          </nav>\n        </ScrollArea>\n      </aside>\n\n      {/* Main Content */}\n      <div className=\"flex-1 flex flex-col\">\n        {/* Header */}\n        <header className=\"h-14 border-b bg-card px-4 flex items-center justify-between\">\n          <div className=\"flex items-center flex-1 max-w-xl\">\n            {{#if includeSearch}}\n            <div className=\"relative w-full\">\n              <Search className=\"absolute left-2 top-1/2 transform -translate-y-1/2 text-muted-foreground h-4 w-4\" />\n              <Input\n                type=\"search\"\n                placeholder=\"Search...\"\n                className=\"pl-8 w-full\"\n              />\n            </div>\n            {{/if}}\n          </div>\n          <div className=\"flex items-center gap-2\">\n            <Button variant=\"ghost\" size=\"icon\">\n              <Bell className=\"h-4 w-4\" />\n            </Button>\n            <Button\n              variant=\"ghost\"\n              size=\"icon\"\n              onClick={() => setTheme(theme === \"dark\" ? \"light\" : \"dark\")}\n            >\n              {theme === \"dark\" ? (\n                <Sun className=\"h-4 w-4\" />\n              ) : (\n                <Moon className=\"h-4 w-4\" />\n              )}\n            </Button>\n            <DropdownMenu>\n              <DropdownMenuTrigger asChild>\n                <Button variant=\"ghost\" className=\"relative h-8 w-8 rounded-full\">\n                  <Avatar className=\"h-8 w-8\">\n                    <AvatarImage src=\"/avatar.png\" alt=\"User\" />\n                    <AvatarFallback>JD</AvatarFallback>\n                  </Avatar>\n                </Button>\n              </DropdownMenuTrigger>\n              <DropdownMenuContent className=\"w-56\" align=\"end\" forceMount>\n                <DropdownMenuLabel className=\"font-normal\">\n                  <div className=\"flex flex-col space-y-1\">\n                    <p className=\"text-sm font-medium leading-none\">John Doe</p>\n                    <p className=\"text-xs leading-none text-muted-foreground\">\n                      john@example.com\n                    </p>\n                  </div>\n                </DropdownMenuLabel>\n                <DropdownMenuSeparator />\n                <DropdownMenuItem>\n                  <User className=\"mr-2 h-4 w-4\" />\n                  <span>Profile</span>\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <Settings className=\"mr-2 h-4 w-4\" />\n                  <span>Settings</span>\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <HelpCircle className=\"mr-2 h-4 w-4\" />\n                  <span>Help</span>\n                </DropdownMenuItem>\n                <DropdownMenuSeparator />\n                <DropdownMenuItem>\n                  <LogOut className=\"mr-2 h-4 w-4\" />\n                  <span>Log out</span>\n                </DropdownMenuItem>\n              </DropdownMenuContent>\n            </DropdownMenu>\n          </div>\n        </header>\n\n        {/* Page Content */}\n        <main className=\"flex-1 overflow-y-auto\">\n          <div className=\"container mx-auto py-6\">\n            {children}\n          </div>\n        </main>\n      </div>\n    </div>\n  )\n}\n"
    }
  ]
}