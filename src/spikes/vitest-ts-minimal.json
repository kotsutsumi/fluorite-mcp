{
  "id": "vitest-ts-minimal",
  "name": "Vitest TS Minimal",
  "version": "1.0.0",
  "stack": ["node", "vitest", "typescript"],
  "tags": ["test"],
  "description": "Minimal TypeScript project tested with Vitest.",
  "params": [ { "name": "app_name", "default": "vitest-ts" } ],
  "files": [
    { "path": "{{app_name}}/package.json", "template": "{\n  \"name\": \"{{app_name}}\",\n  \"private\": true,\n  \"type\": \"module\",\n  \"scripts\": { \"test\": \"vitest run\", \"build\": \"tsc\" },\n  \"devDependencies\": { \"typescript\": \"^5\", \"vitest\": \"^1\" }\n}\n" },
    { "path": "{{app_name}}/tsconfig.json", "template": "{ \"compilerOptions\": { \"target\": \"ES2020\", \"module\": \"ESNext\", \"strict\": true, \"esModuleInterop\": true, \"outDir\": \"dist\" } }\n" },
    { "path": "{{app_name}}/src/sum.ts", "template": "export const sum = (a: number, b: number) => a + b;\n" },
    { "path": "{{app_name}}/test/sum.test.ts", "template": "import { describe, it, expect } from 'vitest';\nimport { sum } from '../src/sum';\n\ndescribe('sum', () => {\n  it('adds numbers', () => {\n    expect(sum(1, 2)).toBe(3);\n  });\n});\n" }
  ],
  "patches": []
}

