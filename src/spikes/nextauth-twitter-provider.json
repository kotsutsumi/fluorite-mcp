{
  "id": "nextauth-twitter-provider",
  "name": "NextAuth Twitter Provider (Minimal)",
  "version": "1.0.0",
  "stack": ["nextjs", "nextauth"],
  "tags": ["auth", "oauth"],
  "description": "Configure NextAuth with Twitter provider.",
  "params": [{ "name": "app_name", "default": "next-app" }],
  "files": [
    { "path": "{{app_name}}/app/api/auth/[...nextauth]/route.ts", "template": "import NextAuth from 'next-auth';\nimport Twitter from 'next-auth/providers/twitter';\nconst handler = NextAuth({ providers: [Twitter] });\nexport { handler as GET, handler as POST };\n" },
    { "path": "{{app_name}}/.env.example", "template": "AUTH_TWITTER_ID=\nAUTH_TWITTER_SECRET=\nNEXTAUTH_URL=http://localhost:3000\nNEXTAUTH_SECRET=changeme\n" }
  ],
  "patches": []
}

