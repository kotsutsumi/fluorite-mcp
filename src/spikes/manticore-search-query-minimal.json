{
  "id": "manticore-search-query-minimal",
  "name": "Manticore Search クエリ 最小",
  "version": "1.0.0",
  "stack": ["node", "manticore"],
  "tags": ["search"],
  "description": "Manticore HTTP で SQL/JSON クエリ",
  "params": [ { "name": "app_name", "default": "manticore-query" } ],
  "files": [
    { "path": "{{app_name}}/package.json", "template": "{\\n  \"name\": \"{{app_name}}\",\n  \"private\": true,\n  \"type\": \"module\",\n  \"scripts\": { \"start\": \"node run.js\" },\n  \"dependencies\": { \"node-fetch\": \"^3\" }\n}\n" },
    { "path": "{{app_name}}/run.js", "template": "import fetch from 'node-fetch';\nconsole.log('POST to /sql or /json/search endpoints');\n" }
  ]
}

