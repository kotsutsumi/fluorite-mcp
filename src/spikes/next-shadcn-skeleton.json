{
  "id": "next-shadcn-skeleton",
  "name": "Next.js shadcn/ui Skeleton",
  "version": "1.0.0",
  "stack": ["nextjs", "shadcn"],
  "tags": ["ui", "skeleton"],
  "description": "Skeleton loading placeholder blocks.",
  "params": [{ "name": "app_name", "default": "next-app" }],
  "files": [
    { "path": "{{app_name}}/components/ui/skeleton.tsx", "template": "export function Skeleton(){ return (<div className='animate-pulse'><div className='h-4 bg-gray-200 rounded w-1/2 mb-2' /><div className='h-4 bg-gray-200 rounded w-1/3' /></div>); }\n" },
    { "path": "{{app_name}}/app/page.tsx", "template": "import { Skeleton } from '../components/ui/skeleton'; export default function Page(){ return <main className='p-6'><Skeleton/></main>; }\n" }
  ],
  "patches": []
}

