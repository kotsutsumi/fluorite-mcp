{
  "id": "swc-ts-lib-minimal",
  "name": "SWC TS ライブラリ最小",
  "version": "1.0.0",
  "stack": ["typescript", "swc"],
  "tags": ["build"],
  "description": "@swc/cli でTSをビルド。",
  "params": [ { "name": "app_name", "default": "swc-lib" } ],
  "files": [
    { "path": "{{app_name}}/.swcrc", "template": "{ \"jsc\": { \"target\": \"es2020\", \"parser\": { \"syntax\": \"typescript\" } } }\n" },
    { "path": "{{app_name}}/package.json", "template": "{\n  \"name\": \"{{app_name}}\",\n  \"private\": true,\n  \"type\": \"module\",\n  \"main\": \"dist/index.js\",\n  \"scripts\": { \"build\": \"swc src -d dist\" },\n  \"devDependencies\": { \"@swc/cli\": \"^0.3\", \"@swc/core\": \"^1\" }\n}\n" },
    { "path": "{{app_name}}/src/index.ts", "template": "export const sub = (a: number, b: number) => a - b;\n" }
  ],
  "patches": []
}

