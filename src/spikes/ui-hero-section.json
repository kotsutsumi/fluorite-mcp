{
  "id": "ui-hero-section",
  "name": "Modern Hero Section with CTA",
  "version": "1.0.0",
  "stack": ["react", "nextjs", "tailwindcss", "shadcn-ui"],
  "tags": ["ui", "hero", "landing", "cta", "responsive", "gradient", "tailwind", "shadcn"],
  "description": "A modern hero section with gradient background, compelling copy, and strong call-to-action using TailwindCSS v4.1+ and shadcn/ui v2+",
  "params": [
    {
      "name": "framework",
      "required": false,
      "description": "Target framework (react, nextjs, vue)",
      "default": "react"
    },
    {
      "name": "componentName",
      "required": false,
      "description": "Component name",
      "default": "HeroSection"
    },
    {
      "name": "showVideo",
      "required": false,
      "description": "Include video background",
      "default": "false"
    },
    {
      "name": "style",
      "required": false,
      "description": "Visual style (gradient, minimal, image)",
      "default": "gradient"
    }
  ],
  "files": [
    {
      "path": "components/{{componentName}}.tsx",
      "template": "\"use client\"\n\nimport * as React from \"react\"\nimport { cn } from \"@/lib/utils\"\nimport { Button } from \"@/components/ui/button\"\nimport { Badge } from \"@/components/ui/badge\"\nimport { ArrowRight, Play, Star, Users, Zap, Shield } from \"lucide-react\"\nimport Link from \"next/link\"\n\ninterface {{componentName}}Props extends React.HTMLAttributes<HTMLElement> {}\n\nexport function {{componentName}}({ className, ...props }: {{componentName}}Props) {\n  const [isVideoPlaying, setIsVideoPlaying] = React.useState(false)\n\n  return (\n    <section \n      className={cn(\n        \"relative overflow-hidden px-6 py-24 sm:px-6 sm:py-32 lg:px-8\",\n        {{#if (eq style 'gradient')}}\n        \"bg-gradient-to-br from-primary/20 via-primary/5 to-background\",\n        {{else if (eq style 'image')}}\n        \"bg-[url('/hero-bg.jpg')] bg-cover bg-center bg-no-repeat\",\n        {{else}}\n        \"bg-background\",\n        {{/if}}\n        className\n      )} \n      {...props}\n    >\n      {/* Background Elements */}\n      <div className=\"absolute inset-0 -z-10\">\n        <div className=\"absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]\" />\n        {{#if (eq style 'gradient')}}\n        <div className=\"absolute top-0 right-0 -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]\">\n          <div className=\"relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-primary to-secondary opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]\" />\n        </div>\n        {{/if}}\n      </div>\n\n      <div className=\"mx-auto max-w-4xl text-center\">\n        {/* Announcement Badge */}\n        <div className=\"mb-8 flex justify-center\">\n          <Badge variant=\"outline\" className=\"px-3 py-1 text-sm\">\n            <span className=\"mr-2 text-primary\">ðŸŽ‰</span>\n            New features available now\n            <ArrowRight className=\"ml-2 h-3 w-3\" />\n          </Badge>\n        </div>\n\n        {/* Main Heading */}\n        <h1 className=\"text-4xl font-bold tracking-tight text-foreground sm:text-6xl md:text-7xl\">\n          Build Amazing\n          <span className=\"bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent\">\n            {\" \"}Digital Experiences\n          </span>\n        </h1>\n        \n        {/* Subheading */}\n        <p className=\"mx-auto mt-6 max-w-2xl text-lg leading-8 text-muted-foreground sm:text-xl\">\n          Create stunning, responsive web applications with our modern UI components. \n          Built with the latest technologies and best practices for maximum performance and accessibility.\n        </p>\n\n        {/* CTA Buttons */}\n        <div className=\"mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row sm:gap-6\">\n          <Button size=\"lg\" className=\"px-8 py-3 text-lg\" asChild>\n            <Link href=\"/get-started\">\n              Get Started Free\n              <ArrowRight className=\"ml-2 h-5 w-5\" />\n            </Link>\n          </Button>\n          \n          {{#if showVideo}}\n          <Button \n            variant=\"outline\" \n            size=\"lg\" \n            className=\"px-8 py-3 text-lg\"\n            onClick={() => setIsVideoPlaying(true)}\n          >\n            <Play className=\"mr-2 h-5 w-5\" />\n            Watch Demo\n          </Button>\n          {{else}}\n          <Button variant=\"outline\" size=\"lg\" className=\"px-8 py-3 text-lg\" asChild>\n            <Link href=\"/demo\">\n              View Demo\n              <ArrowRight className=\"ml-2 h-5 w-5\" />\n            </Link>\n          </Button>\n          {{/if}}\n        </div>\n\n        {/* Social Proof */}\n        <div className=\"mt-16 flow-root sm:mt-20\">\n          <div className=\"flex flex-col items-center justify-center space-y-4 sm:flex-row sm:space-x-8 sm:space-y-0\">\n            <div className=\"flex items-center space-x-1\">\n              <div className=\"flex space-x-1\">\n                {Array.from({ length: 5 }).map((_, i) => (\n                  <Star key={i} className=\"h-5 w-5 fill-yellow-400 text-yellow-400\" />\n                ))}\n              </div>\n              <span className=\"ml-2 text-sm text-muted-foreground\">4.9/5 from 2,000+ reviews</span>\n            </div>\n            \n            <div className=\"flex items-center space-x-2 text-sm text-muted-foreground\">\n              <Users className=\"h-5 w-5\" />\n              <span>Trusted by 50,000+ developers</span>\n            </div>\n          </div>\n        </div>\n\n        {/* Feature Highlights */}\n        <div className=\"mt-16 grid grid-cols-1 gap-8 sm:mt-20 sm:grid-cols-3\">\n          <div className=\"flex flex-col items-center space-y-3\">\n            <div className=\"rounded-full bg-primary/10 p-3\">\n              <Zap className=\"h-6 w-6 text-primary\" />\n            </div>\n            <h3 className=\"text-lg font-semibold\">Lightning Fast</h3>\n            <p className=\"text-center text-sm text-muted-foreground\">\n              Optimized for performance with modern build tools and techniques\n            </p>\n          </div>\n          \n          <div className=\"flex flex-col items-center space-y-3\">\n            <div className=\"rounded-full bg-primary/10 p-3\">\n              <Shield className=\"h-6 w-6 text-primary\" />\n            </div>\n            <h3 className=\"text-lg font-semibold\">Secure by Default</h3>\n            <p className=\"text-center text-sm text-muted-foreground\">\n              Built with security best practices and regular security audits\n            </p>\n          </div>\n          \n          <div className=\"flex flex-col items-center space-y-3\">\n            <div className=\"rounded-full bg-primary/10 p-3\">\n              <Users className=\"h-6 w-6 text-primary\" />\n            </div>\n            <h3 className=\"text-lg font-semibold\">Developer Friendly</h3>\n            <p className=\"text-center text-sm text-muted-foreground\">\n              Comprehensive documentation and excellent developer experience\n            </p>\n          </div>\n        </div>\n      </div>\n\n      {{#if showVideo}}\n      {/* Video Modal */}\n      {isVideoPlaying && (\n        <div className=\"fixed inset-0 z-50 flex items-center justify-center bg-black/80 p-4\">\n          <div className=\"relative w-full max-w-4xl\">\n            <Button\n              variant=\"outline\"\n              size=\"icon\"\n              className=\"absolute -top-12 right-0 bg-background\"\n              onClick={() => setIsVideoPlaying(false)}\n            >\n              Ã—\n            </Button>\n            <div className=\"aspect-video w-full rounded-lg bg-background/10 backdrop-blur-sm\">\n              <iframe\n                src=\"https://www.youtube.com/embed/dQw4w9WgXcQ\"\n                className=\"h-full w-full rounded-lg\"\n                allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\"\n                allowFullScreen\n              />\n            </div>\n          </div>\n        </div>\n      )}\n      {{/if}}\n    </section>\n  )\n}\n"
    }
  ]
}