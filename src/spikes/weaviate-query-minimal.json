{
  "id": "weaviate-query-minimal",
  "name": "Weaviate Query (Node)",
  "version": "1.0.0",
  "stack": ["node", "weaviate"],
  "tags": ["vector", "database"],
  "description": "Minimal GraphQL query with weaviate-ts-client.",
  "params": [
    { "name": "app_name", "default": "weaviate-query-app" },
    { "name": "weaviate_host", "default": "localhost:8080" },
    { "name": "weaviate_scheme", "default": "http" }
  ],
  "files": [
    { "path": "{{app_name}}/index.mjs", "template": "import weaviate from 'weaviate-ts-client';\nconst client = weaviate.client({\n  scheme: process.env.WEAVIATE_SCHEME || '{{weaviate_scheme}}',\n  host: process.env.WEAVIATE_HOST || '{{weaviate_host}}',\n});\nconst res = await client.graphql.get().withClassName('Document').withLimit(3).do();\nconsole.log(JSON.stringify(res, null, 2));\n" },
    { "path": "{{app_name}}/package.json", "template": "{ \"name\": \"{{app_name}}\", \"type\": \"module\", \"private\": true, \"dependencies\": { \"weaviate-ts-client\": \"latest\" } }\n" },
    { "path": "{{app_name}}/.env.example", "template": "WEAVIATE_SCHEME=http\nWEAVIATE_HOST=localhost:8080\n" }
  ],
  "patches": []
}

