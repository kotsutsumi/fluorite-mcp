{
  "id": "morgan-json-format-minimal",
  "name": "Morgan JSON フォーマット 最小",
  "version": "1.0.0",
  "stack": ["morgan", "express"],
  "tags": ["logging"],
  "description": "morgan で JSON ログ",
  "params": [ { "name": "app_name", "default": "express-app" } ],
  "files": [
    { "path": "{{app_name}}/server.js", "template": "const express = require('express');\nconst morgan = require('morgan');\nconst app = express();\napp.use(morgan('\\":method :url :status\\"'));\napp.get('/', (_req,res)=>res.send('ok'));\napp.listen(3000);\n" }
  ]
}

