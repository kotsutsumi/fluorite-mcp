{
  "id": "nextauth-slack-provider",
  "name": "NextAuth Slack Provider",
  "version": "1.0.0",
  "stack": ["nextjs", "nextauth"],
  "tags": ["auth", "oauth"],
  "description": "Configure NextAuth with Slack provider.",
  "params": [{ "name": "app_name", "default": "next-app" }],
  "files": [
    { "path": "{{app_name}}/app/api/auth/[...nextauth]/route.ts", "template": "import NextAuth from 'next-auth';\nimport Slack from 'next-auth/providers/slack';\nconst handler = NextAuth({ providers: [Slack] });\nexport { handler as GET, handler as POST };\n" },
    { "path": "{{app_name}}/.env.example", "template": "AUTH_SLACK_ID=\nAUTH_SLACK_SECRET=\nNEXTAUTH_URL=http://localhost:3000\nNEXTAUTH_SECRET=changeme\n" }
  ],
  "patches": []
}

